import React, { useEffect, useState } from 'react';
import { View, Button, Alert } from 'react-native';
import { Accelerometer } from 'expo-sensors';
import * as Location from 'expo-location';
import * as Linking from 'expo-linking';

const App = () => {
  const [isSendingSMS, setIsSendingSMS] = useState(false);
  const [location, setLocation] = useState(null);

  useEffect(() => {
    Accelerometer.addListener(handleShake);
    return () => {
      Accelerometer.removeAllListeners();
    };
  }, []);

  const handleShake = ({ x, y, z }) => {
    const acceleration = Math.sqrt(x * x + y * y + z * z);
    if (acceleration > 2) { // Adjust this threshold as needed
      if (!isSendingSMS) {
        getLocationAndSendWhatsApp();
      }
    }
  };

  const getLocationAndSendWhatsApp = async () => {
    try {
      setIsSendingSMS(true);

      const { status } = await Location.requestForegroundPermissionsAsync();
      if (status !== 'granted') {
        Alert.alert('Permission denied', 'Location permission is required to send the message.');
        setIsSendingSMS(false);
        return;
      }

      const currentLocation = await Location.getCurrentPositionAsync({});
      setLocation(currentLocation);
      sendWhatsApp(currentLocation);
    } catch (error) {
      Alert.alert('Error', error.message);
    }
  };

  const sendWhatsApp = (currentLocation) => {
    const locationLink = `https://maps.apple.com/?ll=${currentLocation.coords.latitude},${currentLocation.coords.longitude}`;
    const message = `I'm in distress! Please find my current location on Apple Maps: ${locationLink}`;

    // Replace '1234567890' with your preset WhatsApp number
    const whatsappLink = `https://wa.me/9372584027?text=${encodeURIComponent(message)}`;

    Linking.openURL(whatsappLink).then(() => {
      Alert.alert('WhatsApp opened', 'Your distress message has been sent successfully via WhatsApp.');
    }).catch(() => {
      Alert.alert('Error', 'Could not open WhatsApp.');
    }).finally(() => {
      setIsSendingSMS(false);
    });
  };

  return (
    <View style={{ flex: 1, justifyContent: 'center', alignItems: 'center' }}>
      <Button title="Shake for Help" onPress={handleShake} />
    </View>
  );
};

export default App;
